<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppJogoVelha.App">

    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#33B1DB" />
            <Setter Property="CornerRadius" Value="22" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="Title" />
            <Setter Property="BorderColor" Value="#000" />
            <Setter Property="BorderWidth" Value="2" />
        </Style>

        <Style TargetType="Grid">
            <Setter Property="ColumnSpacing" Value="20" />
            <Setter Property="RowSpacing" Value="20" />
            <Setter Property="Margin" Value="20, 20, 20, 50" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="50" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="TextColor" Value="#fff" />
            <Setter Property="BackgroundColor" Value="#000000" />
            <Setter Property="Opacity" Value="0.6" />
        </Style>
    </Application.Resources>
</Application>